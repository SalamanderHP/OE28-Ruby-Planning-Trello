<% content_for :css do %>
  <%= stylesheet_link_tag "boards/new", "data-turbolinks-track": "reload" %>
<% end %>

<main>
  <div class="container">
    <div class="header">
      <%= t ".newboard" %>
    </div>
    <div class="description">
      <p><%= t ".newdescribe" %></p>
    </div>
    <div class="form-wrapper">
      <%= form_for @board do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= hidden_field_tag :type, params[:type] %>
        <%= f.label t ".name" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label t ".description" %>
        <%= f.text_field :description, class: "form-control" %>
        <%= f.label :status, class: "checkbox inline" do %>
          <%= f.check_box :status %>
          <span><%= t ".public" %></span>
        <% end %>
        <%= f.submit t(".submit"), class: "d-block btn btn-success mt-3" %>
      <% end %>
    </div>
  </div>
</main>
