<% list = tag.list %>

<div id="tag-closed-<%= tag.id %>" class="tag">
  <div class="content">
    <span class="name"><%= tag.name %></span> -
    <span><%= list.name %></span> -
    <span><%= list.board.name %></span>
    <div class="info">
      <small><%= l(tag.updated_at, format: :long) %></small>
    </div>
    <div class="description"><%= tag.description %></div>
  </div>

  <div class="modify">
    <%= link_to t(".restore"), open_board_tag_path(list.board.id, tag.id, list_id: list.id), class: "btn btn-success", method: :delete, data: {confirm: t(".confirm_restore")}, remote: true %>
    <%= link_to t(".delete"), board_tag_path(list.board.id, tag.id), class: "btn btn-danger ml-2", method: :delete, remote: true, data: {confirm: t(".confirm_delete")} %>
  </div>
</div>
