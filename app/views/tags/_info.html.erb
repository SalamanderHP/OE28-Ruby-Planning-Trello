    <div id="deadline-info" class="info">
      <%= render "deadlines/deadline", tag: tag if tag.deadline %>
    </div>
  </div>
  <div class="member">
    <%#= TO DO render "members" %>
  </div>
  <div class="tag-description">
    <p id="tag-description"><%= tag.description %></p>
  </div>
</div>
