<%= provide :title, t(".confirmation") %>

<div class="background">
  <div class="logo">
    <%= icon "fas", "globe-asia" %>
  </div>
  <div class="form-wrapper">
    <div class="form-group sign-up">
      <div class="sign"><%= t ".confirmation" %></div>
      <%= form_for resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post} do |f| %>
        <%= f.email_field :email, placeholder: t(".enter_email_address"), autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
        <%= display_error f.object, :email, t(".email") %>
        <%= f.submit t(".resend_confirmation"), class: "btn btn-primary form-control" %>
        <% end %>
      <%= link_to t(".sign_in"), new_user_session_path, class: "register" %>
    </div>
  </div>
</div>
