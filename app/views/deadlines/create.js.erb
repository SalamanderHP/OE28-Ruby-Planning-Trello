<% unless @tag.errors.any? %>
  $('#deadline-info').html('<%= j render "deadlines/deadline", tag: @tag %>');
  $('#deadline-tag-<%= @tag.id %>').html('<%= j render "deadlines/short_deadline", tag: @tag %>');

  $("#completed").change(function () {
    $.ajax({
      url: $(this).data('url'),
      type: "PATCH",
      data: {"tag": {
        "completed": this.checked
      }}
    });
  });
<% end %>
$('#deadline').html('<%= j render "deadlines/form" %>');
$('#toastr').html('<%= j render "shared/toastr" %>');
