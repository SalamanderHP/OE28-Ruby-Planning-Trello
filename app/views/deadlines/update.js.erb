<% if @tag.errors.present? %>
  $('#toastr').html('<%= j render "shared/toastr" %>');
<% else %>
  $('#deadline-status').text('(<%= deadline_status @tag %>)');
  $('#deadline-status')[0].className = '<%= deadline_status @tag %>';
  $('#deadline-tag-<%= @tag.id %>').html('<%= j render "deadlines/short_deadline", tag: @tag %>');
<% end %>
