<% if current_user.user_boards.user_role(current_user.id, @board.id).starred? %>
  <%= link_to board_user_board_path(@board, user_id: current_user.id, user_boards: {starred: false}), method: :patch, remote: true, class: "starred" do %>
    <%= icon "fas", "star" %>
  <% end %>
<% else %>
  <%= link_to board_user_board_path(@board, user_id: current_user.id, user_boards: {starred: true}), method: :patch, remote: true do %>
    <%= icon "fas", "star" %>
  <% end %>
<% end %>
