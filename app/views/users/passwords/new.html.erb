<%= provide :title, t(".forgot_password") %>

<div class="background">
  <div class="logo">
    <%= icon "fas", "globe-asia" %>
  </div>
  <div class="form-wrapper">
    <div class="form-group sign-up">
      <div class="sign"><%= t ".forgot_password" %></div>
      <%= form_for resource, as: resource_name, url: password_path(resource_name), html: {method: :post} do |f| %>
        <%= f.email_field :email, autofocus: true, placeholder: t(".enter_email_address"), class: "form-control" %>
        <%= display_error f.object, :email, t(".email") %>
        <%= f.submit t(".recover"), class: "btn btn-primary form-control" %>
      <% end %>
      <%= link_to t(".sign_in"), new_user_session_path, class: "register" %>
      <%= link_to t(".sign_up"), new_user_registration_path, class: "register" %>
    </div>
  </div>
</div>
