<div class="edit-section">
  <div id="checklist">
    <%= render "checklists/add_form", tag: @tag %>
  </div>
  <div class="progress mb-2">
    <div class="progress-bar" role="progressbar" style="width: <%= progress checklists %>;">
      <%= progress checklists %>
    </div>
  </div>
  <div class="expand-btn">
    <%= link_to "#checklists", "data-toggle": :collapse, role: :button, "aria-expanded": false do %>
      <%= icon "fas", "check-square" %>
      <%= t(".checklists") %>
    <% end %>
    <div class="float-right">
      <span id="checked-checklist"><%= @tag.checklists.checked.size %></span>/<span id="total-checklist"><%= @tag.checklists.size %></span>
    </div>
  </div>
  <div class="collapse" id="checklists">
    <div id="checklists-card" class="card card-body">
      <%= render partial: "checklists/checklist", collection: checklists, as: :checkitem if checklists %>
    </div>
  </div>
</div>
