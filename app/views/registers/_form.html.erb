<%= form_with model: @user, url: register_path do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.text_field :name, class: "form-control", placeholder: t(".name") %>
  <%= f.email_field :email, class: "form-control", placeholder: t(".email") %>
  <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>
  <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".confirm_password") %>
  <%= f.submit t(".register"), class: "btn btn-primary form-control" %>
<% end %>
